<h1>Course details</h1>

<h3> Category </h3>
<p><%=h @course.course_category ? @course.course_category.name : "uncategorized" %></p>
	
<h3> Description </h3>

<p><%=h @course.description %> </p>

<h3> Instances </h3>

<table>
<% @course.instances.each do |instance| %>
  <tr>
	<td><%= link_to instance.name, course_instance_path(@course, instance) %></td>
    <td>Starts <%= instance.start_date %></td>
   </tr>
<% end %>
</table>

<h3> Separate Exams </h3>

<table><td>Name/Type</td><td>Date</td>
<% @course.separate_exams.each do |se| %>
  <tr>
	<td><%=h se.name %></td>
	<td><%= se.date %></td>
   </tr>
<% end %>
</table>


<br />

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>